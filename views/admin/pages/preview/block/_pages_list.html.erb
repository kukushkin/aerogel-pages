<%
table block.listed_page_contents do
    unless block.ordered_by == :position
        column block.ordered_by, style: "width:25%" do |pc|
            l pc.try( block.ordered_by ).try(:to_date), default: t.aerogel.admin.decorators.no_date
        end
    end
    column :title do |pc|
        link_to "#{pc.lang}-#{pc.page.id}",
            admin_pages_title_as_icon_and_text( pc.page, pc.lang ),
            onclick: "pages_widget.goto_page('#{pc.page.id}'); return false"
    end
end
%>
