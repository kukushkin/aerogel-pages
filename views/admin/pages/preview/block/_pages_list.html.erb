<%
table block.listed_pages do
    unless block.ordered_by == :position
        column block.ordered_by, style: "width:25%" do |page|
            l page.try( block.ordered_by ).try(:to_date), default: t.aerogel.admin.decorators.no_date
        end
    end
    column :title do |page|
        link_to "#{page.lang}-#{page.page_node.id}",
            admin_pages_title_as_icon_and_text( page.page_node, page.lang ),
            onclick: "pages_widget.goto_page('#{page.page_node.id}'); return false"
    end
end
%>
