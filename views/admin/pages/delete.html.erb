<% page_title "Delete page?" %>

<% form @page,
        action: "/admin/pages/#{@lang}-#{@page.id}/delete",
        cancel_url: "/admin/pages/#{@lang}-#{@page.id}",
        lang: @lang do
%>

<% subpages_count = object.descendants.count %>
<% if subpages_count == 0 %>
    Delete page "<%= admin_pages_title_as_text object, options[:lang] %>" ?
<% else %>
    Delete page "<b><%= admin_pages_title_as_text object, options[:lang] %></b>" and <b><%= subpages_count %></b> of its subpages?
<% end %>

<p class="alert alert-warning">
    <%= icon_warning %> <%= t.aerogel.admin.warning_permanent_action %>
</p>
<%=     button :cancel, url: options[:cancel_url] %>
<%=     button :danger_submit, label: "Delete page" %>
<% end %>
