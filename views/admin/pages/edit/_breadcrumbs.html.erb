<ol class="breadcrumb">
<% @page.parent.ancestors_and_self.sort_by(&:depth).each do |p| %>

    <li>
        <%= render_once :home, icon('fa-home') %>
        <%= p.content(@lang).try(:title) %>
    </li>
<% end if @page.parent.present? %>
    <li>
        <%= @page.page_type.try(:name) %>
    </li>
</ol>